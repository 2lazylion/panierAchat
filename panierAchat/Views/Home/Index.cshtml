@{
    ViewData["Title"] = "Home Page";
}

<!-- container principal -->
    <div class="container bg-light fill" style="min-height: 100vh; height: 100vh; border: 2px solid grey;">
        <!-- titre -->
        <header class="jumbotron my-4 pb-2" style="border: 1px solid grey;">
            <h1 class="display-3"> Connexion </h1>
        </header>

        <!-- formulaire de login -->
        <div class="row">
            <div class=" col-lg-10 offset-2">
                <form asp-controller="Products" asp-action="Index">
                    <div class="form-group">
                        <label for="utilisateur"> Nom d'utilisateur </label>
                        <input type="text" class="form-control col-7" id="utilisateur" name="utilisateur" placeholder="entrer votre nom d'utilisateur">
                        <!--  div class="valid-feedback" -->
                    </div>
                    <div class="form-group">
                        <label for="mdp"> Mot de passe </label>
                        <input type="password" class="form-control col-7" id="mdp" name="mdp" placeholder="Mot de passe">
                    </div>
                    <button type="submit" class="btn btn-primary"> Connexion </button>
                </form>
            </div>
        </div>
        <div class="row offset-2 pt-2">
            <br>
            <br>
            <br>
            <br>
            <a asp-area="" asp-controller="Credentials" asp-action="Create"> Nouveau? Inscrivez-vous! </a>
        </div>
    </div>

